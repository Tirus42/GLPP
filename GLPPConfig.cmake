SET(GLPP_INCLUDE_PATH ${CMAKE_CURRENT_LIST_DIR}/include)
SET(GLPP_OPENGL_LOADER GLEW CACHE STRING "Select OpenGL loader library")

SET_PROPERTY(CACHE GLPP_OPENGL_LOADER PROPERTY STRINGS GLEW GL3W)

if (GLPP_OPENGL_LOADER STREQUAL "GLEW")
	add_definitions(-DUSE_GLEW)
	if (WIN32)
		SET(GLPP_OPENGL_LIBRARIES "GLEW32")
	else ()
		SET(GLPP_OPENGL_LIBRARIES "GLEW")
	endif ()
else ()
	add_definitions(-DUSE_GL3W)
	SET(GLPP_OPENGL_LIBRARIES "gl3w")
endif ()

if (WIN32)
	SET(GLPP_OPENGL_LIBRARIES ${GLPP_OPENGL_LIBRARIES} "opengl32")
else ()
	SET(GLPP_OPENGL_LIBRARIES ${GLPP_OPENGL_LIBRARIES} "GL")
endif ()
